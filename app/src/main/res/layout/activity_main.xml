<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="casual"
        android:text="Upcoming..."
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTextView4" />

    <TextView
        android:id="@+id/welcomeTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="casual"
        android:text="@string/home_Welcome_Message"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/tripFragment"
        android:name="com.example.touristhelperapp.TripFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTextView" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="288dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/back"
        android:queryHint="Search..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tripFragment" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/eventFragment3"
        android:name="com.example.touristhelperapp.EventIcon"
        android:layout_width="153dp"
        android:layout_height="157dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toStartOf="@+id/eventFragment2"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventFragment" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/eventFragment2"
        android:name="com.example.touristhelperapp.EventIcon"
        android:layout_width="153dp"
        android:layout_height="157dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/eventFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/eventFragment"
        app:layout_constraintTop_toTopOf="@+id/eventFragment" />

    <TextView
        android:id="@+id/seeAllMyTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="casual"
        android:onClick="seeAllMyTrips"
        android:text="@string/home_See_Trips"
        android:textColor="#3F51B5"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/welcomeTextView"
        app:layout_constraintStart_toEndOf="@+id/welcomeTextView"
        app:layout_constraintTop_toTopOf="@+id/welcomeTextView" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/eventFragment4"
        android:name="com.example.touristhelperapp.EventIcon"
        android:layout_width="153dp"
        android:layout_height="157dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toEndOf="@+id/eventFragment"
        app:layout_constraintTop_toBottomOf="@+id/eventFragment2" />

    <TextView
        android:id="@+id/tripPlanView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="casual"
        android:text="@string/home_Trip_Plan"
        android:textColor="#3F51B5"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/searchView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/searchView"
        app:layout_constraintTop_toTopOf="@+id/searchView" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/eventFragment"
        android:name="com.example.touristhelperapp.TripFragment"
        android:layout_width="153dp"
        android:layout_height="157dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/eventFragment2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

</androidx.constraintlayout.widget.ConstraintLayout>